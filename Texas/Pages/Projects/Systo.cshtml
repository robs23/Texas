@page
@model Texas.Pages.SystoModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Systo";
    Layout = "~/Pages/_Layout.cshtml";
}

@section head{
    <link href="~/css/page-systo.css" rel="stylesheet" />
}

<article id="systo-overview">
    <section id="row-1" class="parallax"></section>
    <section id="features">
        <div class="container">
            <div class="feature-container">
                <h3>@Localizer["Modular"]</h3>
                <p>@Localizer["Modular-text"]</p>

                <img src="~/images/Systo_modules.png" id="systo_modules" class="feature-img" />

            </div>
            <div class="feature-container">
                <h3>@Localizer["Multitenant"]</h3>
                <p>@Localizer["Multitenant-text"]</p>
                <div class="feature-img-container">
                    <feature-gif id="systo_multitenancy" play-tooltip="@Localizer["Feature-gif-play"].Value" stop-tooltip="@Localizer["Feature-gif-stop"].Value"></feature-gif>
                </div>

            </div>
            <div class="feature-container">
                <h3>@Localizer["HR"]</h3>
                <p>@Localizer["HR-text"]</p>
                <div class="feature-img-container">
                    <feature-gif id="systo_hr" play-tooltip="@Localizer["Feature-gif-play"].Value" stop-tooltip="@Localizer["Feature-gif-stop"].Value"></feature-gif>
                </div>
            </div>

            <div class="feature-container">
                <h3>@Localizer["CRM"]</h3>
                <p>@Localizer["CRM-text"]</p>
                <div class="feature-img-container">
                    <feature-gif id="systo_crm" play-tooltip="@Localizer["Feature-gif-play"].Value" stop-tooltip="@Localizer["Feature-gif-stop"].Value"></feature-gif>
                </div>
            </div>
            <div class="feature-container">
                <h3>@Localizer["Logistics"]</h3>
                <p>@Localizer["Logistics-text"]</p>\
                <div class="feature-img-container">
                    <feature-gif id="systo_logistics" play-tooltip="@Localizer["Feature-gif-play"].Value" stop-tooltip="@Localizer["Feature-gif-stop"].Value"></feature-gif>
                </div>
            </div>
            <div class="feature-container">
                <h3>@Localizer["Reporting"]</h3>
                <p>@Localizer["Reporting-text"]</p>
                <div class="feature-img-container">
                    <feature-gif id="systo_printable" play-tooltip="@Localizer["Feature-gif-play"].Value" stop-tooltip="@Localizer["Feature-gif-stop"].Value"></feature-gif>
                </div>
            </div>
        </div>

    </section>
</article>

@section scripts{
    <script src="~/js/feature-img.js" asp-append-version="true"></script>
    <script src="~/js/ReplacePngWithGif.js" asp-append-version="true"></script>
    <script src="~/js/utils.js" asp-append-version="true"></script>
    <script src="~/js/animations.js" asp-append-version="true"></script>
}

