@page
@model Texas.Pages.SystoModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Systo";
    Layout = "~/Pages/_Layout.cshtml";
}

@section head{ 
    <link href="~/css/page-systo.css" rel="stylesheet" />
}

<article id="systo-overview">
    <section id="row-1"></section>
    <section id="features">
        <div class="container">
            <div class="feature-container">
                <h3>@Localizer["Modular"]</h3>
                <p>@Localizer["Modular-text"]</p>

                <img src="~/images/Systo_modules.png" id="systo_modules" class="feature-img" />
                
            </div>
            <div class="feature-container">
                <h3>@Localizer["Multitenant"]</h3>
                <p>@Localizer["Multitenant-text"]</p>
                <div class="feature-img-container">
                    <div class="feature-gif">
                        <img src="~/images/systo_multitenancy.png" id="systo_multitenancy" class="feature-img" />
                        <span class="play-gif-container">
                            <span>
                                <i class="fa fa-play-circle feature-btn player" onclick="changeImage2GifWithButton('systo_multitenancy')"></i>
                                <i class="fa fa-stop-circle feature-btn stopper" onclick="changeGif2ImageWithButton('systo_multitenancy')"></i>
                            </span>
                        </span>
                    </div>
                </div>
                
            </div>
            <div class="feature-container">
                <h3>@Localizer["HR"]</h3>
                <p>@Localizer["HR-text"]</p>
                <div class="feature-img-container">
                    <div class="feature-gif">
                        <img src="~/images/systo_hr.png" id="systo_hr" class="feature-img" />
                        <span class="play-gif-container">
                            <span>
                                <i class="fa fa-play-circle feature-btn player" onclick="changeImage2GifWithButton('systo_hr')"></i>
                                <i class="fa fa-stop-circle feature-btn stopper" onclick="changeGif2ImageWithButton('systo_hr')"></i>
                            </span>
                        </span>
                    </div>
                </div>
            </div>
                
            <div class="feature-container">
                <h3>@Localizer["CRM"]</h3>
                <p>@Localizer["CRM-text"]</p>
                <div class="feature-img-container">
                    <div class="feature-gif">
                        <img src="~/images/systo_crm.png" id="systo_crm" class="feature-img" />
                        <span class="play-gif-container">
                            <span>
                                <i class="fa fa-play-circle feature-btn player" onclick="changeImage2GifWithButton('systo_crm')"></i>
                                <i class="fa fa-stop-circle feature-btn stopper" onclick="changeGif2ImageWithButton('systo_crm')"></i>
                            </span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="feature-container">
                <h3>@Localizer["Logistics"]</h3>
                <p>@Localizer["Logistics-text"]</p>\
                <div class="feature-img-container">
                    <div class="feature-gif">
                        <img src="~/images/systo_logistics.png" id="systo_logistics" class="feature-img" />
                        <span class="play-gif-container">
                            <span>
                                <i class="fa fa-play-circle feature-btn player" onclick="changeImage2GifWithButton('systo_logistics')"></i>
                                <i class="fa fa-stop-circle feature-btn stopper" onclick="changeGif2ImageWithButton('systo_logistics')"></i>
                            </span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="feature-container">
                <h3>@Localizer["Reporting"]</h3>
                <p>@Localizer["Reporting-text"]</p>
                <div class="feature-img-container">
                    <div class="feature-gif">
                        <img src="~/images/systo_printable.png" id="systo_printable" class="feature-img" />
                        <span class="play-gif-container">
                            <span>
                                <i class="fa fa-play-circle feature-btn player" onclick="changeImage2GifWithButton('systo_printable')"></i>
                                <i class="fa fa-stop-circle feature-btn stopper" onclick="changeGif2ImageWithButton('systo_printable')"></i>
                            </span>
                        </span>
                    </div>
                </div>
            </div>
        </div>

    </section>
</article>

@section scripts{
    <script src="~/js/feature-img.js" asp-append-version="true"></script>
    <script src="~/js/ReplacePngWithGif.js" asp-append-version="true"></script>

}

